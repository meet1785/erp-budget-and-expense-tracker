# Database Configuration
# For local MongoDB
MONGODB_URI=mongodb://localhost:27017/erp_budget_tracker

# For MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/erp_budget_tracker?retryWrites=true&w=majority

DB_NAME=erp_budget_tracker

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_at_least_32_characters_long

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration - Enhanced SMTP settings
# Gmail SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Alternative: Use EMAIL_SERVICE for predefined services
# EMAIL_SERVICE=gmail
# EMAIL_SERVICE=outlook
# EMAIL_SERVICE=yahoo

# For other SMTP providers (Outlook, Yahoo, custom SMTP)
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# EMAIL_SECURE=false

# For secure connections (port 465)
# EMAIL_PORT=465
# EMAIL_SECURE=true

# Frontend URL
CLIENT_URL=http://localhost:3000

# File Upload Configuration
UPLOAD_PATH=uploads/receipts
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cloud Storage (Optional - for production)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_BUCKET_NAME=your_bucket_name
# AWS_REGION=us-east-1

# Currency API (for multi-currency support)
# CURRENCY_API_KEY=your_currency_api_key
# CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest

# PDF Generation Service
# PUPPETEER_EXECUTABLE_PATH=/path/to/chrome
# PDF_TEMP_DIR=temp/pdfs